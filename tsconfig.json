{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es2020",
    "target": "es2020",
    "experimentalDecorators": true,
    "declaration": false,
    "moduleResolution": "node",
    "types": ["hammerjs", "jasmine", "node"],
    "lib": ["es2020", "dom"]
  },
  "files": ["public_api.ts"],
  "exclude": ["node_modules"],
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
